@page 
@model IndexModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<script type="importmap"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/IndexStyles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/PerfilStyles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Pagina_Oxxo.styles.css" asp-append-version="true" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Dancing+Script:wght@400..700&family=Exo:ital,wght@0,100..900;1,100..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=PT+Sans+Narrow:wght@400;700&family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/LoginStyles.css" asp-append-version="true" />

<body style="center-myDiv">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom pt-3 pb-3 box-shadow mb-3 top">
            <div class="container-fluid mx-3">
                <img src="~/imagen/Oxxo.png" alt="" width="70" height="35">
            </div>
        </nav>
    </header>

    <div class="d-flex justify-content-center align-items-center" style="margin-top: 180px; margin-left: -10px;">
        <form method="post">
            <div class="card" style="width: 350px; height: 400px;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                    <img src="~/imagen/Oxxo.png" alt="" width="70" height="35">
                    <h1 class="card-title">Inicio Sesión</h1>

                    <div class="form w-75 mt-2">
                        <label for="floatingInputGrid" class="text-start w-100">Usuario</label>
                        <input asp-for="email" type="text" class="form-control border border-dark rounded " id="floatingInputGrid">
                    </div>

                    <div class="form w-75 mt-2">
                        <label for="floatingInputGrid" class="text-start w-100">Contraseña</label>
                        <input asp-for="password" type="password" class="form-control border border-dark rounded" id="floatingInputGrid">
                    </div>

                    <p id="mensaje" class="text-danger">@Model.Mensaje</p>

                    <input type="submit" asp-page-handler="Iniciar" class="btn btn-outline-dark mt-3" value="Iniciar Sesión" />
                </div>
            </div>
        </form>
    </div>
</body>