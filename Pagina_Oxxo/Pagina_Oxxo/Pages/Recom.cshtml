@page
@model RecomModel
@{
    ViewData["Title"] = "Reconocimientos";
}
<script type="importmap"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/PerfilStyles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Pagina_Oxxo.styles.css" asp-append-version="true" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Dancing+Script:wght@400..700&family=Exo:ital,wght@0,100..900;1,100..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=PT+Sans+Narrow:wght@400;700&family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/LoginStyles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/Reconocimientos.css" asp-append-version="true" />


<div class="text-center ">
    <h1 class="display-4">Mis Reconocimientos</h1>
</div>
<div class="container mt-3">
    <div class="row">
        <div class="col-md " style="flex: 0 0 29.17%; max-width: 29.17%;"></div>
        <div class="col-md-5 ">
            <div class="card text-center">
                <h3 class="card-header" id="nat">Medallas</h3>
                <div class="d-flex justify-content-center">
                    <div class="medallas-iconos">
                        <img class="rounded-circle" src="~/imagen/icon1.png"  
                            style="width: 70px; height: 70px;">
                        <small class="d-block"> Buen Ejemplo </small>
                    </div>
                    <div class="medallas-iconos">
                        <img class="rounded-circle" src="~/imagen/icon2.png"  
                            style="width: 70px; height: 70px;">
                        <small class="d-block"> Líder Inspirador </small>
                    </div>
                    <div class="medallas-iconos">
                        <img class="rounded-circle" src="~/imagen/icon3.png"  
                            style="width: 70px; height: 70px;">
                        <small class="d-block"> Compañero Ideal </small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md " style="flex: 0 0 29.17%; max-width: 29.17%;"></div>
    </div>
    <div class="row mt-4">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <div class="card text-center">
                <h2 class="card-header" id="nat">Nueva medalla</h2>
                <div class="card-body" id="cardBodyNAT">
                    <form method="post">
                        <div id="medallasContainer">
                            <label for="medallaSelect" class="form-label">Medalla</label>
                            <select id="medallaSelect" class="form-select w-100 mx-auto mb-4" name="medallaSelect">
                                <option value="1">Buen Ejemplo</option>
                                <option value="2">Líder Inspirador</option>
                                <option value="3">Compañero Ideal</option>
                            </select>
                            <label for="usuarioSelect" class="form-label">Compañero</label>
                            <select id="usuarioSelect" class="form-select w-100 mx-auto mb-4" name="usuarioSelect">
                                @foreach (var item in Model.usuariosTienda)
                                {
                                    <option value="@item.id_usuario">@item.nombre @item.apellido</option>
                                }
                            </select>
                            <label for="contenidoMedalla" class="form-label">Mensaje</label>
                            <textarea class="form-control" id="contenidoMedalla" name="contenidoMedalla" rows="3"></textarea>
                            <div class="d-flex justify-content-center mt-3">
                                <button class="btn btn-primary" id="btnNAT" type="submit">Asignar medalla</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card text-center">
                <h2 class="card-header" id="nat">Mis medallas</h2>
                <div class="card-body" id="cardBodyNAT">                       
                    <div class="scrollable-div" id="medallasContainer">
                        @foreach (var item in Model.reconocimientos)
                        {   
                            <div class="medallas">
                                <div class="fila-superior">
                                    <img src="@Url.Content($"~/imagen/icon{item.id_icono}.png")" class="rounded-circle" alt="@item.id_icono" width="50px" height="50px"/>
                                    <div class="textoSuperior">
                                        <p>@item.transmisor</p> 
                                        <p>@item.fecha_mensaje</p>
                                    </div>
                                </div>
                                <p class="textoInferior">@item.contenido</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>               